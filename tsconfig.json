{
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    },
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "rootDir": "",
        "outDir": "dist",
        "strict": true,
        "allowJs": true,
        "checkJs": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "sourceMap": true,
        "baseUrl": "./",
        "paths": {
            "@commands/*": [
                "src/Commands/*"
            ],
            "@system/*": [
                "src/System/*"
            ],
            "@maps/*": [
                "src/Maps/*"
            ],
            "@mizukiTypes/*": [
                "src/Types/*"
            ],
            "@util/*": [
                "src/Util/*"
            ],
            "@database/*": [
                "src/System/Database/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "./*.json",
        "./**/*.json"
    ],
    "exclude": [
        "node_modules",
        "scripts",
    ],
}